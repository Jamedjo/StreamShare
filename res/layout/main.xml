<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:gravity="center_horizontal"
    android:scrollbars="horizontal|vertical"
    android:background="@drawable/radial_bg" >
    	
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
   		android:padding="10dp"
    	android:orientation="vertical" >
        
        <TextView
            android:id="@+id/instructions_textbox_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions_a"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/watch_rtsp"
            android:contentDescription="@string/watch_rtsp_alt"/>

	    <TextView
	        android:id="@+id/instructions_textbox_b"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/instructions_b"
	        android:textColor="#000000" />
	
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/vlc"
	        android:contentDescription="@string/vlc_alt"/>
	    
	    <TextView
    		android:id="@+id/instructions_textbox_c"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/instructions_c"
	        android:textColor="#000000" />
	    
	    </LinearLayout>
</ScrollView>